<article class="post">
    <h1><%- page.title %></h1>

    <aside>
        <time datetime="<%- page.date.format() %>" title="<%- page.date.format() %>"><%= page.date.format(config.date_format) %></time>

        <% if (page.tags && page.tags.length){ %>
        <%
            var tags = [];
            page.tags.forEach(function(tag){
                tags.push('<a class="tag" href="' + config.root + tag.path + '">#' + tag.name + '</a>');
            });
        %>
        <div class="tags">
            <%- tags.join(' ') %>
        </div>
        <% } %>
    </aside>

    <%- page.content %>
</article>