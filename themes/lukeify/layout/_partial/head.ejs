<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">

    <meta name="description" content="<% if (config.subtitle){ %><%= config.subtitle %><% } %>">
    <meta name="author" content="<% if (config.author){ %><%= config.author %><% } %>">
    <meta name="canonical" content="<% if (config.url){ %><%= config.url %><% } %>">
    <meta name="copyright" content="<% if (config.author){ %><%= config.author %><% } %>">
    <% if (is_post()) { %>
        <meta name="subject" content="<%- strip_html(page.excerpt) %>">
    <% } %>

    <link rel="stylesheet" type="text/css" href="/css/lukeify-blog.css">

    <% if (page.needs_charts) { %>
        <script src="/js/Chart.min.js" type="text/javascript"></script>
    <% } %>

    <% if (is_post()) { %>
        <!-- OpenGraph Tags -->
        <meta name="og:title" content="<%- page.title %>">
        <meta name="og:type" content="post">
        <meta name="og:description" content="<%- strip_html(page.excerpt) %>">

        <% if (page.opengraphimage) { %>
            <meta name="og:image" content="<%- page.permalink + page.opengraphimage %>">
            <meta name="og:image:alt" content="<%- page.opengraphimagealt %>">
        <% } else { %>
            <meta name="og:image" content="<%- page.permalink %>/link/to/photo.jpg">
            <meta name="og:image:alt" content="<%- config.subtitle %>">
        <% } %>

        <meta name="og:url" content="<%- page.permalink %>">
        <meta name="og:site_name" content="Blog | Lukeify">
        <meta name="og:locale" content="en_NZ">

        <!-- Twitter Card Tags -->
        <% if (page.opengraphimage) { %>
            <meta name="twitter:card" content="summary_large_image">
        <% } else { %>
            <meta name="twitter:card" content="summary">
        <% } %>

        <meta name="twitter:card" content="summary">
        <meta name="twitter:site" content="@lukeifynz">
        <meta name="twitter:creator" content="@lukeifynz">
        <meta name="twitter:description" content="<%- strip_html(page.excerpt) %>">
        <meta name="twitter:title" content="<%- page.title %>">
        <meta name="twitter:url" content="<%- page.permalink %>">
        <meta name="twitter:domain" content="blog.lukeify.com">

        <% if (page.opengraphimage) { %>
            <meta name="twitter:image" content="<%- page.permalink + page.opengraphimage %>">
            <meta name="twitter:image:alt" content="<%- page.opengraphimagealt %>">
        <% } else { %>
            <meta name="twitter:image" content="<%- page.permalink %>/link/to/photo.jpg">
            <meta name="twitter:image:alt" content="<%- config.subtitle %>">
        <% } %>

        <title><%- page.title %> | Lukeify</title>
    <% } else { %>
        <title>Blog | Lukeify</title>
    <% } %>
</head>
